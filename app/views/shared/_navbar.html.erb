<div class="navbar navbar-expand-sm navbar-light navbar-lewagon b-bottom">
  <%= link_to root_path, id: "brand" do %>
    <h4 class="title">BeSmart</h4>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if controller.controller_name == "philosophers" && controller.action_name == "index" %>
    <div class="location-field">
                <%= text_field_tag :location,
                  params[:location],
                  class: "form-control",
                  placeholder: "Where?"
                %>
              </div>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto d-flex align-items-baseline">
      <li class="nav-item active">
        <%= link_to "New philosopher", new_philosopher_path, class: "primary-btn" %>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item dropdown ml-3">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My philosophers", dashboard_philosophers_path, class: "dropdown-item" %>
          <%= link_to "My reservations", dashboard_reservations_path, class: "dropdown-item" %>
          <%= link_to "Sign off", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
