<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="con-form">
        <h1 class="title">New philosopher</h1>
        <p class="body">Add your philosopher and let others enjoy his wisdom.</p>
        <div class="con-form-inputs">
          <%= simple_form_for @philosopher do |f| %>
            <div class="row">
              <div class="col-12 col-lg-6">
                <%= f.input :first_name, placeholder: "Fisrt name", input_html: { class: "default-input" } %>
              </div>
              <div class="col-12 col-lg-6">
                <%= f.input :last_name, placeholder: "Last name", input_html: { class: "default-input" } %>
              </div>
            </div>
            <%= f.input :specialty, as: :radio_buttons, collection: Philosopher::SPECIALTIES, wrapper: :vertical_collection_inline %>
            <%= f.input :nationality, placeholder: "Greek", input_html: { class: "default-input" } %>
            <%# f.input :prestations, collection: Philosopher::PRESTATIONS, input_html: { multiple: true}, include_hidden: false, as: :check_boxes %>
            <fieldset class="form-group check_boxes required philosopher_prestations">

              <legend class="col-form-label pt-0">Prestations <abbr title="required">*</abbr></legend>
              <div class="con-prestations">
                <% Philosopher::PRESTATIONS.each do |prestation| %>
                  <input class="d-none" type="checkbox" value="<%= prestation %>" name="philosopher[prestations][]" id="philosopher_prestations_<%= prestation %>">

                  <label class="prestation" for="philosopher_prestations_<%= prestation %>"><%= prestation %></label>
                <% end %>
              </div>
            </fieldset>
            <%= f.input :address, placeholder: "Enter an address", input_html: { class: "default-input" } %>
            <div class="row">
              <div class="col-12 col-lg-6">
                <%= f.input :price_per_night, label: "Price /night (â‚¬)", placeholder: "49", input_html: { class: "default-input" } %>
              </div>
            </div>
            <%= f.input :description, placeholder: "Tell us your story...", input_html: { class: "default-input" } %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: "primary-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>





